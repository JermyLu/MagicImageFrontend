/*设置page居中设置*/
page {
  height: 100%;
  width: 750rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.imageContainer {
  width: 100%;
  height: 500rpx;
}

.item {
  height: 500rpx;
}

.itemImg {
  position: absolute;
  width: 90%;
  height: 300rpx;
  border-radius: 15rpx;
  z-index: 5;
  opacity: 0.7;
  top: 13%;
  margin: 0 30rpx;
}

.active {
  opacity: 1;
  z-index: 10;
  height: 360rpx;
  top: 7%;
  transition: all .2s ease-in 0s;
}
